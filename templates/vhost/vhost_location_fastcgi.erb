  root  <%= www_root %>;

  # static files
  location <%= location %> {
    index <% index_files.each do |i| %> <%= i %> <% end %>; 
  }

  # fastcgi
  location <%= fastcgi_location %> {
    try_files $uri = 404;
    include <%= fastcgi_params %>;
    fastcgi_index <%= fastcgi_index %>;
    fastcgi_pass <%= fastcgi %>;
    <% unless fastcgi_script == :undef %>
    fastcgi_param SCRIPT_FILENAME <%= fastcgi_script %>;
    <% end %>
  }
